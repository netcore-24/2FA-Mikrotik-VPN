# Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните значения

# Приложение
APP_NAME=MikroTik 2FA VPN System
APP_ENV=production
APP_DEBUG=false
APP_SECRET_KEY=your-secret-key-here-change-in-production

# База данных SQLite
DATABASE_URL=sqlite:///./data/mikrotik_2fa.db

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Микротик (по умолчанию, можно переопределить через веб-интерфейс)
MIKROTIK_HOST=
MIKROTIK_PORT=22
MIKROTIK_USERNAME=
MIKROTIK_PASSWORD=
MIKROTIK_SSH_KEY_PATH=

# Настройки приложения
LOG_LEVEL=INFO
LOG_FORMAT=json

# Веб-сервер
HOST=0.0.0.0
PORT=8000

# CORS (для веб-интерфейса)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Безопасность
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Уведомления
ADMIN_EMAIL=
ADMIN_TELEGRAM_ID=
